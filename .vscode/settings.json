{
    "editor.formatOnSave": true,
    "C_Cpp.clang_format_fallbackStyle": "LLVM",
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools",
    },
    "zig.zls.enabled": "on",
    "[zig]": {
        "editor.defaultFormatter": "ziglang.vscode-zig"
    },
    "files.associations": {
        "__config": "cpp",
        "*.zig": "zig",
        "__node_handle": "cpp",
        "ios": "cpp",
        "ostream": "cpp"
    }
}